{
    "include": ["./*.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "../build/server",
        "sourceMap": true,
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        },
        "forceConsistentCasingInFileNames": true,
        "allowJs": false
    }
}
