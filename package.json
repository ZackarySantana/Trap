{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "setup": "run-s setup:*",
    "setup:env": "node ./prescripts/generate-env.js",
    "setup:prisma": "npx prisma migrate dev --name initial && npx prisma generate",
    "build": "run-p build:app:* build:server build:prisma",
    "build:app:css": "npm run css:minify",
    "build:app:remix": "remix build",
    "build:server": "tsc --project ./server/tsconfig.json",
    "build:prisma": "tsc --project ./prisma/tsconfig.json",
    "dev": "npm-run-all css:clean --parallel dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server/index.ts --watch ./server",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node ./build/server/index.js",
    "css:clean": "npm run minify -- clean",
    "css:minify": "npm run minify -- minify",
    "prisma": "run-s prisma:*",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node ./prisma/seed.ts",
    "minify": "node ./prescripts/minify-css.js",
    "clean": "rm -rf ./build",
    "clean:css": "npm run minify -- clean",
    "test:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "test:run": "cross-env NODE_ENV=8811 start-server-and-test dev http://localhost:3000 \"npx cypress run\"",
    "seed": "node ./build/prisma/seed.js"
  },
  "dependencies": {
    "@faker-js/faker": "^7.5.0",
    "@prisma/client": "^4.3.1",
    "@remix-run/express": "^1.7.1",
    "@remix-run/node": "^1.7.1",
    "@remix-run/react": "^1.7.1",
    "@testing-library/cypress": "^8.0.3",
    "autoprefixer": "^10.4.11",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.13",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "postcss": "^8.4.16",
    "prisma": "^4.3.1",
    "prom-client": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "replace-in-file": "^6.3.5",
    "response-time": "^2.3.2",
    "start-server-and-test": "^1.14.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.1",
    "@remix-run/eslint-config": "^1.7.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/response-time": "^2.3.5",
    "cypress": "^10.8.0",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "node ./build/prisma/seed.js"
  }
}
