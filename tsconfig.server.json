{
    "include": ["server/*.ts"],
    "compilerOptions": {
        "module": "es2022",
        "target": "ES2019",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/server",
        "sourceMap": true,
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./server/*"]
        },
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false
    }
}
